.scoreboard
	display: flex
	justify-content: center;
	align-content: center;

.score-column
	max-width: 200px
	display: block
	width: 100%
	text-align: center
	font: 12px 'Lucida Sans', 'trebuchet MS', Arial, Helvetica;
	text-shadow: 0 1px rgba(255,255,255,.8);
	border: 1px solid #ddd;
	border-left: none;
	&.active
		padding: 0px 0 57px;
		top: -12px;
		position: relative;
		box-shadow: 0px 0px 21px 3px rgba(0, 0, 0, .25);
		.shots
			margin-top: 72px;
	&:first-child
		border-left: 1px solid #ddd;
	&.winner-player
		border: 3px solid green !IMPORTANT;


.score-header
	background-color: #eee;
	background-image: linear-gradient(#fcfcfc, #eee)
	font-size: 1.5em
	padding: 20px 10px 10px 10px
	line-height: 1
.score
	display: block;
	font: bold 25px Georgia, Serif;
	color: #777;
	background: #fff;
	border: 5px solid #fff;
	height: 100px;
	width: 100px;
	margin: 10px auto -65px;
	border-radius: 100px;
	box-shadow: 0 5px 20px #ddd inset, 0 3px 0 #999 inset;
	position: relative;
	overflow: hidden
	div > div
		margin-top: 25px
	span.tempScore
		display: block;
		font-size: 14px;
		color: #c3bebe;
		position: absolute;
		top: 60%;
		width: 100%;
.shots
	margin-top: 60px;
.shot
	padding: 10px 0;
	border-bottom: 1px solid #ddd;
.shots-form
	text-align: center;
	h3
		font-size: 1.5em;
	.shot-input
		width: 60px;
		height: 42px;
		font-size: 1.5em;
		padding: 0;
		text-align: center;
	.btn
		padding: 8px 20px;
		margin: 20px auto;
		color: #fff;
		font: bold 14px Arial, Helvetica;
		width: 80%
		background: #45484d; /* Old browsers */
		background: -moz-linear-gradient(top, #45484d 0%, #000000 100%); /* FF3.6-15 */
		background: -webkit-linear-gradient(top, #45484d 0%,#000000 100%); /* Chrome10-25,Safari5.1-6 */
		background: linear-gradient(to bottom, #45484d 0%,#000000 100%);
.checkout
	color: green;
	line-height: 1.5;
	font-size: 1.3em;
.green
	color: green;
	margin-bottom: 30px;
.red
	color: red;
	margin-bottom: 30px;

.winner
	display:none;
	width: 100%
	height: 100%
	transition all 0.25s
	margin-bottom: 30px
	&.visible
		display: block;

.moveUp-enter
	transition all 0.25s
	transform translateY(100%) // start it just off screen
	&.moveUp-enter-active
		transform translateY(0)
.moveUp-leave
	transition all 0.25s
	position absolute
	width: 100%
	top: 0
	text-align: center
	transform translateY(0)  // start it where it is
	&.moveUp-leave-active
		transform translateY(-100%)  // start it where it is
